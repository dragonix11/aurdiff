#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=hexgrep
pkgver=2013.9.1
pkgrel=1
pkgdesc='versatile grep-like binary stream and file search tool'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/hexgrep"
source=(
  http://xyne.archlinux.ca/projects/hexgrep/src/hexgrep-2013.9.1.tar.xz
  http://xyne.archlinux.ca/projects/hexgrep/src/hexgrep-2013.9.1.tar.xz.sig
)
sha512sums=(
  e63e4c1935c5a0cecdde27c60eb950f021cd499f48099eea3514900d778561516eefb2620a57e0571b90115f340eaf628b972e14333c9b00a8eb6c2e36346689
  08e66201357e3e735732e20355e678956ec7ee6b9308b3d4548d07878775bfdb8d885de54371054dec05a2f3d0f9fed1ae9f73cc2356ed0b2e3bbda7b0fd3739
)
md5sums=(
  3a3b4f1164ed0e69a2e567616a5adbc4
  fddd6c14dc49d81d88dea1cb610735d1
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  make
}

package ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  make prefix=/usr DESTDIR="$pkgdir" install
  install -Dm644 "man/hexgrep.1.gz" "$pkgdir/usr/share/man/man1/hexgrep.1.gz"
}

