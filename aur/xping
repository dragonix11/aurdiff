# Maintainer: Johan Svensson <johan@loxley.se>
pkgname=xping
_gitname=xping
pkgver=1.1
pkgrel=2
pkgdesc="xping is a simple PING program continiously probing multiple hosts using ICMP-ECHO"
url="https://github.com/martintopholm/xping"
arch=('any')
license="GPL"
depends=('libevent')
source=("git://github.com/martintopholm/$_gitname.git")
md5sums=('SKIP')
install='xping.install'
#CPPFLAGS="$CPPFLAGS -O2"
CPPFLAGS="-Wall -Werror -I/usr/local/include"

build() {
    cd "$pkgname"
    make
}

package() {
    cd "$pkgname"
    install -Dm4555 "$srcdir/$pkgname/$pkgname" "$pkgdir/usr/bin/$pkgname"
}
