# Maintainer: VojtÄ›ch Aschenbrenner <v@asch.cz>

_gemname=sup
pkgname=sup
pkgver=0.14.1
pkgrel=1
pkgdesc="Sup is a console-based email client for people with a lot of email."
arch=(any)
url="http://supmua.org/"
license=('GPL')
depends=('ruby-chronic' 'ruby-highline' 'ruby-locale' 'ruby-lockfile' 'ruby-mime-types' 'ruby-ncursesw-sup' 'ruby-rmail' 'ruby-trollop' 'ruby-unicode' 'ruby-xapian-ruby')
conflicts=(sup-git)
install='ruby2.install'
source=(http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('26aa1323de9e89e4c7cf1ea542cb631f')

package() {
  cd "$srcdir"
  # _gemdir is defined inside package() because if ruby[gems] is not installed on
  # the system, makepkg will exit with an error when sourcing the PKGBUILD.
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"

  gem install --no-user-install --ignore-dependencies -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" \
    "$_gemname-$pkgver.gem"
}

# vim:set ts=2 sw=2 et:
