# Contributor: Feufochmar <feufochmar@d-20.fr>
pkgname=wmnet
pkgver=1.06
pkgrel=3
pkgdesc="A network monitor applet for WindowMaker"
arch=('i686' 'x86_64')
url="http://dockapps.windowmaker.org/file.php/id/77"
license=('GPL')
depends=('libxext')
makedepends=('imake')
source=(http://dockapps.windowmaker.org/download.php/id/115/$pkgname-$pkgver.tar.gz)
md5sums=('64e74c37c0cb5fd4fb81cfb0f5c4a264')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  xmkmf || return 1
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
  make DESTDIR="$pkgdir" install.man
}
