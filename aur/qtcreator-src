pkgname=qtcreator-src
_pkgver=2.8
pkgver=${_pkgver}.0
pkgrel=1
pkgdesc="Source code of QtCreator IDE needed to build plugins"
arch=('any')
url="http://qt-project.org/wiki/Category:Tools::QtCreator"
license=('LGPL')
depends=()
options=('!strip')
makedepends=()
source=("http://download.qt-project.org/official_releases/qtcreator/${_pkgver}/${pkgver}/qt-creator-${pkgver}-src.tar.gz")
md5sums=('5aacdad4491b7dda9758a81384d8da79')
sha512sums=('bc5ee815e445a3da3f0777ed75c259915220964ce9a0bf3f94ea80795dbb812384c587f31e1c554726d491f9a74c0ac719a497291afb2808a1f45852ef1b6ea0')

PKGEXT='.pkg.tar'

package () {
    cd "${srcdir}"
    mkdir -p "$pkgdir/usr/src/"
    cp -r "qt-creator-${pkgver}-src" "$pkgdir/usr/src/qtcreator"
}
