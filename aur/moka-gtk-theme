# Maintainer: David Couzelis <drcouzelis@gmail.com>

pkgname=moka-gtk-theme
pkgver=0.1
pkgrel=1
pkgdesc="A GTK/Metacity theme by the creator of the Moka icon set."
arch=(any)
url="https://github.com/snwh/moka-gtk-theme"
license=('GPL')
source=(http://www.snwh.org/files/moka-gtk-theme.zip)
md5sums=('bb2e847c821fe8ae49396347f936a779')
optdepends=('moka-icon-theme: Moka icon set'
            'moka-dark-icon-theme: Moka icon set'
            'moka-blue-icon-theme: Moka icon set')

build() {
  install -d "$pkgdir"/usr/share/themes
  mv "$srcdir"/Moka "$pkgdir"/usr/share/themes/Moka
  chmod -R 755 "$pkgdir"/usr/share/themes/Moka
}
