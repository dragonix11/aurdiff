pkgname=videomaker
pkgver=0.1
pkgrel=2
pkgdesc="Build a movie from pictures"
arch=('any')
url="https://github.com/sciunto/VideoMaker"
license=('GPL3')
depends=('python' 'texlive-core' 'texlive-bin')
makedepends=('python-setuptools')
source=(https://github.com/downloads/sciunto/VideoMaker/VideoMaker-${pkgver}.tar.bz2)
md5sums=("11b7ecd359535e2f3abc5b744af99eed")

build() {
  cd "${srcdir}/src/"
  python setup.py install --root="${pkgdir}"
}

