pkgrel=1
pkgdesc='libquvi-scripts-0.4.x.'
arch=('any')
url='http://quvi.sourceforge.net/'
license=('LGPL')
depends=('curl' 'lua')
options=('!libtool')
source=("http://downloads.sourceforge.net/sourceforge/quvi/libquvi-scripts-${pkgver}.tar.xz"{,.sig})
