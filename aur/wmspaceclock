# Maintainer: SanskritFritz (gmail)
# Contributor: bidulock (AUR)

pkgname=wmspaceclock
_prgname=spaceclock
pkgver=1.2d
pkgrel=2
pkgdesc="Antialiased analog clock for the Window Maker dock."
url="http://$pkgname.sourceforge.net/"
arch=('i686' 'x86_64')
license=('GPLv2')
depends=('gdk-pixbuf')
source=("http://sourceforge.net/projects/$pgkname/files/$pkgname/$pkgver/$_prgname-$pkgver.tar.bz2")

build() {
	cd "$srcdir/$_prgname"
	./configure --prefix=/usr
	make DESKDIR= PREFIX="/usr"
}

package() {
	cd "$srcdir/$_prgname"
	rm --recursive pixmaps/CVS
	install -d "$pkgdir/usr/bin"
	make DESTDIR= PREFIX="$pkgdir/usr" install
}

md5sums=('97bcf9cc8a5518f8b37752beba9a7a9c')
