#Mantainer: M0Rf30
pkgname=gyp-svn
pkgver=1719
pkgrel=2
pkgdesc="GYP can Generate Your Projects."
url="http://code.google.com/p/gyp/"
arch=('i686' 'x86_64')   
makedepends=(svn)
depends=('python2' 'python2-setuptools')
license=(BSD2)
source=("svn+http://gyp.googlecode.com/svn/trunk/"
	'ez_setup.py')

pkgver() {
  cd "$srcdir/trunk"
  svnversion | tr -d [A-z]
}

package() {
  cd "$srcdir/trunk"
  cp ../ez_setup.py .
  python2 setup.py install --root=$pkgdir
}

md5sums=('SKIP'
         'dd567cb951468d970e4d999f515a7bd4')
