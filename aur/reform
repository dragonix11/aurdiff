pkgname=reform
pkgver=0.1.2
pkgrel=1
pkgdesc="a PKGBUILD file updater"
arch=('any')
url="https://bitbucket.org/hav3lock/pub_rel/src"
license=('GPL3')
depends=('perl' 'perl-text-diff')
source=("https://bitbucket.org/hav3lock/pub_rel/downloads/$pkgname-$pkgver.tar.gz")
md5sums=('0bba771d8dcb2d85b9bedaed0bf212a4')

package () {

    cd "$srcdir/$pkgname-$pkgver"

    make DESTDIR="\"$pkgdir\"" install

}
