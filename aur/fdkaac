# AUR Package Author: PelPix <kylebloss@pelpix.info>

pkgname=fdkaac
pkgver=0.3.0
pkgrel=3
pkgdesc="Encoder frontend for libfdk-aac"
arch=('i686' 'x86_64')
url="https://github.com/nu774/fdkaac"
license=('custom')
depends=('libfdk-aac')
conflicts=('fdkaac-git' 'libfdk-aac-git')
makedepends=('git')
source=(git://github.com/nu774/fdkaac.git#commit=fb2b363)
md5sums=('SKIP')

pkgver() {

  cd $pkgname
#  git log -1 --format="%cd" --date=short | sed 's|-||g'
}

build() {
  cd $pkgname
  autoreconf -i
  ./configure
  
  make
}

package() {
  cd $pkgname

  make DESTDIR="$pkgdir" \
  bindir=/usr/bin \
  install
}
# vim:set ts=2 sw=2 et:
