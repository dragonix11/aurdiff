pkgname=kateinclude-helper-plugin
name=KateCppHelperPlugin
pkgver=0.9.2
pkgrel=1
pkgdesc="Kate Include Helper plugin"
arch=('any')
url="http://github.com/zaufi/kate-include-helper-plugin"
license=('GPL-2')
categories=()
depends=('kdebase-katepart' 'boost' 'kdesdk-kate' 'clang>=3.1')
makedepends=()
options=(!emptydirs)
#source=("http://kde-apps.org/CONTENT/content-files/148606-$name-$pkgver.tar.bz2")
source=("http://opendesktop.org/CONTENT/content-files/148606-$name-$pkgver.tar.bz2")
md5sums=('37f254295c955dcefd05fbe1b61ee953')

build() {
   cd $srcdir/$name-$pkgver
    if [ -d build ] ; then
        rm build/* -rf
    else
        mkdir build
    fi
    cd build
   cmake -DQT_QMAKE_EXECUTABLE=/usr/bin/qmake-qt4 -DBUILD_TESTING=OFF -DCMAKE_INSTALL_PREFIX=~/.kde4 .. && make clean
  make DESTDIR="$pkgdir" install
#install -dm 755 $pkgdir/usr/share/apps/katepart/syntax
#cp $srcdir/$pkgname-$pkgver/txl.xml $pkgdir/usr/share/apps/katepart/syntax
}

