# Maintainer: Jesse Jaara <gmail.com: jesse.jaara>

pkgname=trid-defs
pkgver=2013.08.20
pkgrel=1
pkgdesc="Filesignature database for trid"
arch=('any')
url="http://mark0.net/soft-trid-e.html"
license=('CUSTOM')
source=(http://mark0.net/download/triddefs.zip)

package() {
  cd "${srcdir}"

  install -D triddefs.trd "${pkgdir}/opt/trid/triddefs.trd"

  mkdir -p "${pkgdir}/usr/share/licenses/trid"
  ln -s "${pkgdir}/usr/share/licenses/trid" "${pkgdir}/usr/share/licenses/trid-defs"
}

md5sums=('bb5216638046d74b86dde9d5a018db66')
