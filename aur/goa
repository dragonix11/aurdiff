# Maintainer: ninian <mcfadzean.org.uk ta linux>

pkgname=goa
pkgver=1.0.3
pkgrel=1
pkgdesc="Opens files with any desktop application or executable on system"
arch=('any')
url="http://appstogo.mcfadzean.org.uk/linux.html#goa"
license=('MIT')
depends=('bash' 'dmenu' 'libnotify')
source=("http://appstogo.mcfadzean.org.uk/dl/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('df9d0e91d2e9c0978b4d915ae6f45bd0')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm644 goa.conf "$pkgdir/usr/share/doc/$pkgname/goa.conf"
  install -Dm644 LICENSE  "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
