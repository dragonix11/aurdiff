# Maintainer: Andrey Vihrov <andrey.vihrov@gmail.com>
# Maintainer: megadriver <megadriver at gmx dot com>
# Based on clearlooks-phenix-gtk-theme-git, also in the AUR

pkgname=clearlooks-phenix-gtk-theme
pkgver=3.0.15
pkgrel=1
pkgdesc="GTK3 theme visually close to Clearlooks"
arch=('any')
url="http://www.jpfleury.net/en/software/clearlooks-phenix.php"
license=('GPL3')
depends=('gtk-engines' 'gnome-themes-standard' 'gtk-engine-unico')
conflicts=('clearlooks-phenix-gtk-theme-git')
#source=(clearlooks-phenix-$pkgver.zip::"http://jpfleury.indefero.net/p/clearlooks-phenix/source/download/$pkgver/")
source=("https://dl.dropboxusercontent.com/u/24028280/clearlooks-phenix-3.0.15.zip") # Temporary mirror
md5sums=('7e616d319d0cfc4088a649b6553f6041')

package() {
  cd $srcdir/clearlooks-phenix-$pkgver
  for FILE in $(find -type f); do
    install -D -m644 $FILE $pkgdir/usr/share/themes/Clearlooks-Phenix/$FILE
  done

  cd doc
  for FILE in $(find -type f); do
    install -D -m644 $FILE $pkgdir/usr/share/doc/$pkgname/$FILE
  done
}
