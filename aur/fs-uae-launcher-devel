# Maintainer: grimi <grimi at poczta dot fm>

_pkgname=fs-uae-launcher
pkgname=fs-uae-launcher-devel
pkgver=2.3.4
pkgrel=1
pkgdesc="FS-UAE Launcher is a graphical user interface for setting up FS-UAE (development version)."
arch=("any")
url="http://fs-uae.net/download-devel"
license=("GPL2")
depends=("fs-uae" "xdg-utils" "wxpython" "python2-pygame" "python2-distribute" "python2-lhafile" "hicolor-icon-theme")
optdepends=("p7zip: for .7z zip support" "python2-pyqt4: for qt4 ui" "python2-pyside: for qt4 ui")
install="${pkgname}.install"
source=("http://fs-uae.net/devel/${pkgver}/${_pkgname}-${pkgver}.tar.gz")
provides=("fs-uae-launcher")
conflicts=("fs-uae-launcher")
md5sums=('a94087222d6122c1b483cfff1f20beda')



build() {
   cd ${_pkgname}-${pkgver}
   python2 setup.py build
   sed 's/^\(.*python setup.py.*\)/#\1/g' -i Makefile
   make
}



package() {
   cd ${_pkgname}-${pkgver}
   python2 setup.py install --skip-build --prefix=/usr --root="${pkgdir}"
   make install DESTDIR="${pkgdir}"
}



