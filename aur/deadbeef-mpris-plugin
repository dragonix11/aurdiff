pkgname=deadbeef-mpris-plugin
prjname=DeaDBeeF-MPRIS-plugin
pkgver=2.1.5
pkgrel=2
pkgdesc="MPRIS plugin for DeaDBeeF music player"
arch=("i686" "x86_64")
license=('GPL')
url="http://code.google.com/p/deadbeef-mpris-plugin"
depends=('deadbeef')
source=()
md5sums=("SKIP")

build() {
  git clone git://ihacklog.com/${prjname}.git
  cd "${srcdir}/${prjname}"
  ./autogen.sh
  ./configure --prefix=/usr
  make
  make DESTDIR="${pkgdir}" install
}
