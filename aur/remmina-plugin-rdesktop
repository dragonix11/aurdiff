# Maintainer: Muflone <webreg@vbsimple.net>

pkgname=remmina-plugin-rdesktop
pkgver=1.0.0.3
pkgrel=1
_builderver=1.0.0.3
pkgdesc="A protocol plugin for Remmina to open a RDP connection with rdesktop."
arch=(i686 x86_64)
url="https://github.com/muflone/remmina-plugin-rdesktop"
license=('GPL')
depends=('gtk3' 'remmina' 'hicolor-icon-theme' 'rdesktop')
makedepends=('pkg-config' 'cmake')
optdepends=()
install=${pkgname}.install
source=(
  "remmina-plugin-builder_${_builderver}.tar.gz::https://github.com/muflone/remmina-plugin-builder/archive/${_builderver}.tar.gz"
  "${pkgname}_${pkgver}.tar.gz::https://github.com/muflone/${pkgname}/archive/${pkgver}.tar.gz"
)
md5sums=(
  'c74ca55ae6ef92f2706acad3a35511de'
  '6b882c27235750bb49a5b2b1bedd0596'
)

build() {
  [ -d build ] && rm -rf build
  cp -r remmina-plugin-builder-${_builderver} build
  cp -r "${pkgname}-${pkgver}"/* build/remmina-plugin-to-build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make
}

package() {
  cd ${srcdir}/build/
  make DESTDIR=${pkgdir} install
}
