# Mantainer: DaLinuxCookie <cookie@openmailbox.org>

pkgname=gtk-theme-numix-blue
pkgver=1.0.1
pkgrel=1
pkgdesc="Modified blue version based on the original Numix theme"
arch=('any')
url="https://github.com/DaLinuxCookie/NumixBLUE"
license=('GPL3')
depends=('gtk-engine-murrine')
source=(https://github.com/DaLinuxCookie/NumixBLUE/blob/v${pkgver}/NumixBLUE-${pkgver}.tar.gz?raw=true)
md5sums=('69114fafb34f937ac4bc68a374319a47')

package() {
	mkdir -p ${pkgdir}/usr/share/themes/NumixBLUE/
	cd ${srcdir}/
	cp -R openbox-3 ${pkgdir}/usr/share/themes/NumixBLUE/
	cp -R gtk-2.0 ${pkgdir}/usr/share/themes/NumixBLUE/
	cp -R gtk-3.0 ${pkgdir}/usr/share/themes/NumixBLUE/
	cp index.theme ${pkgdir}/usr/share/themes/NumixBLUE/
	cp README ${pkgdir}/usr/share/themes/NumixBLUE/
	cp LICENSE ${pkgdir}/usr/share/themes/NumixBLUE/
	cp CREDITS ${pkgdir}/usr/share/themes/NumixBLUE/
}