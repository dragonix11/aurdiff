pkgname=ffdiaporama-devel
pkgver=1.7.devel.20130810
pkgrel=1
pkgdesc="Movie creator from photos and video clips (development version)"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
provides=('ffdiaporama')
depends=('qt5-svg' 'qimageblitz' 'ffmpeg' 'exiv2' 'taglib' 'shared-mime-info')
install=${pkgname}.install
source=(https://launchpad.net/ffdiaporama/1.7-devel/1.7-devel.20130810/+download/ffdiaporama_1.7.devel.2013.0810.tar.gz)
md5sums=('fdb167c9951facc7ca7547685dca914e')

build() {
  qmake PREFIX=/usr ffDiaporama.pro
  make
}

package() {
  make install INSTALL_ROOT=${pkgdir}
}