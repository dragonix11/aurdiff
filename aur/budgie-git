# Maintainer: Daniel Sandman <revoltism@gmail.com>

pkgname=budgie-git
pkgver=v1.10.g3107751
pkgrel=1
pkgdesc="A simple media player using GTK3.10 created by Ikey Doherty. Written in C."
arch=('i686' 'x86_64')
url="http://ikeydoherty.github.io/budgie/"
license=('GPL2')
depends=('gtk3' 'gst-plugins-base-libs' 'id3lib')
makedepends=('git')
conflicts=('musicplayer' 'budgie')
provides=('budgie')
source=("$pkgname"::'git+https://github.com/ikeydoherty/budgie.git')
md5sums=('SKIP')

pkgver() {
     cd "$srcdir/$pkgname"
     echo $(git describe --tags) | sed 's/[-: ]/./g'
}

build() {
     cd "$srcdir/$pkgname"
     ./autogen.sh
     make
}

package() {
     cd "$srcdir/$pkgname"
     make PREFIX=/usr DESTDIR="$pkgdir" install
     install -D -m644 README.md "$pkgdir/usr/share/doc/$pkgname/README"
     install -D -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
