# Contributor: philacs

pkgname=libvisio
pkgver=0.0.30
pkgrel=1
pkgdesc="A library providing ability to interpret and import visio diagrams"
arch=('i686' 'x86_64')
url="http://www.freedesktop.org/wiki/Software/libvisio"
license=('LGPL')
options=(!libtool)
depends=('libwpd>=0.9.5' 'libwpg>=0.2.0' 'libxml2' 'gperf>=3.0')
makedepends=('boost')
source=(http://dev-www.libreoffice.org/src/${pkgname}-${pkgver}.tar.xz)
sha1sums=('c8fe0c59020764ed3a64fae9c854004640b6ebd4')

build() {
  cd "${pkgname}-${pkgver}"
  ./autogen.sh
  ./configure --without-docs --enable-static=no --prefix=/usr
  make
}

package() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR="$pkgdir" install
}
