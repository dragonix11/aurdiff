# Maintainer: Rustam Tsurik <rustam.tsurik@gmail.com>

pkgname=bin32-jre
pkgver=7u40
pkgrel=1
pkgdesc="32-bit Oracle Java 7 for Arch x86_64"
arch=('x86_64')
_arch=i386
license=('custom')
url="http://www.java.com"
depends=('lib32-glibc' 'lib32-libgl' 'lib32-libx11' 'lib32-libxtst' 'lib32-libxi')
makedepends=('diffutils' 'fakeroot' 'pkgconfig')
options=('!strip')
install=bin32-jre.install
source=("jre-$pkgver-linux-i586.tar.gz::http://javadl.sun.com/webapps/download/AutoDL?BundleId=80803")
md5sums=('3e7f53fb5a3a7a4ba57343b1160fe67f')

package() {
  mkdir -p "$pkgdir"{/opt/bin32-jre,/usr/share/licenses/bin32-jre}
  cd "$srcdir"
  cd $(ls -1d jre1.7.0_*/ | tail -1)
  mv * "$pkgdir"/opt/bin32-jre/
  cp "$pkgdir"/opt/bin32-jre/{COPYRIGHT,README,LICENSE,THIRDPARTYLICENSEREADME.txt,THIRDPARTYLICENSEREADME-JAVAFX.txt} "$pkgdir"/usr/share/licenses/bin32-jre/
}
