pkgname=liteloader
pkgver=1.6.2.04
pkgrel=1
pkgdesc="LiteLoader is a lightweight bootstrap designed to give base-clean Minecraft mods a way of hooking into the game without having to use one of the more heavyweight mod API's"
arch=(any)
url="https://www.assembla.com/spaces/liteloader/wiki"
license=("custom")
depends=(java-runtime)
source=("http://dl.liteloader.com/redist/${pkgver%.*}/liteloader-installer-1.6.2-04.jar"
"liteloader-installer.sh")
noextract=("liteloader-installer-1.6.2-04.jar")
md5sums=('2cf3b1458215302ebb3e362f77040444'
         'd3913c083377825908bba32be5f1ee63')

package() {
  install -Dm644 "$srcdir/liteloader-installer-1.6.2-04.jar" "$pkgdir/usr/lib/liteloader/liteloader-installer.jar"
  install -Dm755 "$srcdir/liteloader-installer.sh" "$pkgdir/usr/bin/liteloader-installer"
}

