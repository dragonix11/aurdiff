md5sums=('9a4ea8bf52b1661b29f35292769f22a0')
sha1sums=('f281e0eb5caf554170fa77e02f50a3f3786ffda2')
sha256sums=('30a6b5fdb9089ac4921db8411843bc03e13409259c2ed5e77ff5e2a6c9c9e733')
