# Contributor: graysky <graysky AT archlinux dot us>

pkgname=lostfiles
pkgver=3.00
pkgrel=2
pkgdesc='Find orphan files - those not owned by any Arch packages.'
arch=('any')
license=('GPL2')
depends=('bash')
source=("https://github.com/graysky2/$pkgname/archive/v3.00.tar.gz")
sha256sums=('c1ffc5973ba58366ecc307577a9c01ecdde0317d4625452729806fe17c0e690a')
url="https://github.com/graysky2/lostfiles"

package() {
	cd "$pkgname-$pkgver"
	install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
}
