# Maintainer: Muflone <muflone@vbsimple.net>

pkgname=cpucompare
pkgver=0.1
pkgrel=1
pkgdesc="A GTK+ application to make comparisons between CPU models."
url="https://github.com/muflone/cpucompare"
arch=('any')
license=('GPL2')
depends=('python2' 'gtk3')
provides=('cpucompare')
source=("${pkgname}-${pkgver}.tar.gz"::"https://github.com/muflone/${pkgname}/archive/${pkgver}.tar.gz")
md5sums=('aeeceb2ff1ba3520d089053d78aaec71')
sha1sums=('1503432ce4c6045eb943ffe42d6e89ea421878de')
sha256sums=('c0d0c79c56fefe43f001ca0f7590c70334558d6160d897f36b22d96689a5936e')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --root "${pkgdir}"
}

