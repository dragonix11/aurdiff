# Maintainer: xylosper <darklin20@gmail.com>
# Contributor: willemw <willemw12@gmail.com>

pkgname=cmplayer
pkgver=0.7.9
pkgrel=5
pkgdesc="Powerful and easy-to-use multimedia player"
arch=('i686' 'x86_64')
url="http://$pkgname.github.io"
license=('GPL')
depends=('qt5-base' 'qt5-declarative' 'qt5-x11extras' 'qt5-quickcontrols' 'icu'
         'libdvdread' 'libcdio-paranoia' 'libcdio'
         'alsa-lib' 'libpulse' 'portaudio' 'openal' 'jack'
         'mpg123' 'libva' 'libgl' 'fribidi' 'libass' 'ffmpeg')
makedepends=('mesa' 'gcc')
source=(https://github.com/xylosper/cmplayer/releases/download/v$pkgver/cmplayer-$pkgver-source.tar.gz check_filter_fix_locale_fix_libquvi.patch)
md5sums=('910564db41cf18066f8e8351fc5ada8f' '88491824dbecb3936a9abf965d659e10')

build() {
  export MAKE="make -j $(nproc)"
  cd "$srcdir/$pkgname-$pkgver"
  patch -p1 < ../check_filter_fix_locale_fix_libquvi.patch
  ./build-libchardet
  ./build-mpv
  make PREFIX=/usr cmplayer
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DEST_DIR=$pkgdir PREFIX=/usr install
}
