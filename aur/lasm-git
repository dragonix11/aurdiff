# Maintainer: Kevin Cox <kevincox@kevincox.ca>
pkgname='lasm-git'
pkgver=0.0.0
pkgrel=1
pkgdesc='Reverse-engineering p86 assembler.'
arch=('i686' 'x86_64')
url='https://github.com/hasithvm/lasm'
license=('GPL3')
depends=('qt4')
makedepends=('git')
provides=('lasm')
source=('git+https://github.com/kevincox/lasm')
sha1sums=('SKIP')

build()
{
	cd "$srcdir/lasm/"
	make QMAKE=qmake-qt4
}

package()
{
	cd "$srcdir/lasm/"
	mkdir -p "$pkgdir/usr/bin/"
	install -m755 bin/* "$pkgdir/usr/bin/"
}

