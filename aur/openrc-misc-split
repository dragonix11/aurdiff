makedepends=('alsa-utils' 'fcron' 'fuse' 'gpm' 'hdparm'
	    'laptop-mode-tools' 'openntpd' 'rsyslog'
	    'sane' 'virtualbox-guest-utils' 'udev')
conflicts=('openrc-arch-services-git' 'initscripts'
	  'systemd-sysvcompat' 'openrc' 'openrc-git')

