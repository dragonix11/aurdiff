# Maintainer: q9 <qqqqqqqqq9 at web dot de>
pkgname=scidb-svn
_realpkgname=trunk
pkgver=20130917
pkgrel=4
# epoch=
pkgdesc="Scidb is a Chess Information Data Base SVN-Checkout"
arch=('x86_64' 'i686')
url="http://scidb.sourceforge.net/"
license=('GPL2')
depends=('tk' 'zziplib' 'shared-mime-info'  'minizip' 'libxcursor' 'libsm' 'hicolor-icon-theme' 'gdbm' 'desktop-file-utils')
conflicts=('scidb')
options=('!buildflags' '!makeflags')
install=$pkgname.install
source=(svn://svn.code.sf.net/p/scidb/code/trunk
        $pkgname.install)
md5sums=('SKIP'
         '834d6728a567cc36a1c7ac1c68a7420f')

prepare() {
  cp -r $srcdir/$_realpkgname  $srcdir/$_realpkgname-build
}

build() {
	cd "$srcdir/$_realpkgname-build"
  ./configure --prefix="$pkgdir/usr" --exec-prefix="$pkgdir/usr" --destdir=/usr --mandir=$pkgdir/usr/share/man --enginesdir=$pkgdir/usr/bin
	make
}

package() {
	cd "$srcdir/$_realpkgname-build"
make install
rm -f $pkgdir/usr/share/mime/{aliases,subclasses,XMLnamespaces,magic,globs,generic-icons,globs2,icons,mime.cache,treemagic,types,version}
#cp $srcdir/trunk-build/freedesktop.org/*xml $pkgdir/usr/share/mime/packages/
#cp $srcdir/trunk-build/freedesktop.org/scidb.desktop $pkgdir/usr/share/applications/
 # XDG_DATA_DIRS="$pkgdir/usr/share" make install
  sed -i -e "s@/usr/local/engines@/usr/share/scidb-beta/engines@g;s@$pkgdir@@g" $pkgdir/usr/bin/scidb-beta
  sed -i -e "s@$pkgdir@@g" $pkgdir/usr/bin/update-scidb-photo-files
}
