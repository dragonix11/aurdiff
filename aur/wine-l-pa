#  msg "Applying kuser_shared_data-RT.patch"
#  patch -s -Np1 -i $srcdir/kuser_shared_data-RT.patch
#
#  msg "  ..    SUCCESS :)"

  msg "Applying kernel32-tests-Verify-the-stability-of-CreateTimerQueue.patch"
