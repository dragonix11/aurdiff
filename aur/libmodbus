# Contributor: honzor 

pkgname=libmodbus
pkgver=3.0.5
pkgrel=1
pkgdesc="A Modbus library for Linux (and OSX) wrote in C and which supports RTU and TCP communications."
arch=('i686' 'x86_64')
url="https://launchpad.net/libmodbus"
license=('LGPL')
groups=()
depends=()
makedepends=(asciidoc xmlto)
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!libtool)
install=
source=(http://github.com/stephane/libmodbus/archive/v$pkgver.tar.gz)
md5sums=('d72726ef748059b4abd85de3116e1f25')
noextract=()


build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./autogen.sh
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

