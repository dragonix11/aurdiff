pkgname=pcr-script
pkgver=1.38
pkgrel=1
pkgdesc="Bash script to create local repository from pacman cache. (Pacman Cache Repository)"
arch=('any')
url="https://github.com/yadieet/pcr"
license=('GPLv2')
depends=('bash')
source=("create-pcr::https://raw.github.com/yadieet/pcr/c8f1889a53bf91e836cb270a6ca25ae9b261526d/create-pcr")
md5sums=('a98c761abff86e57ffd9ba4d03e6e0b0')


package() {
  install -D -m755 "${srcdir}/create-pcr" "${pkgdir}/usr/bin/create-pcr"
}


