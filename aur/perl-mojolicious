options=('!emptydirs')
depends=('perl>=0')
makedepends=()
url='http://search.cpan.org/dist/Mojolicious'
source=('http://search.cpan.org/CPAN/authors/id/S/SR/SRI/Mojolicious-4.36.tar.gz')
md5sums=('d2db910efd8bed9e5c760c85668b6d2c')
