pkgname=python2-feedgenerator
pkgver=1.7
pkgrel=1
pkgdesc="Standalone version of django.utils.feedgenerator (python2)."
url="http://pypi.python.org/pypi/feedgenerator"
arch=('any')
license=('GPL')
depends=('python2' 'python2-pytz' 'python2-six' 'python2-setuptools')
source=('http://pypi.python.org/packages/source/f/feedgenerator/feedgenerator-1.5.tar.gz')
md5sums=('7f9b346e613700b3be6b215d3ed7b278')

package() {
  cd $srcdir/feedgenerator-${pkgver}

  python2 setup.py install --root="${pkgdir}" || return 1
}
