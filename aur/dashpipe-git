_pkgname=dashpipe
pkgname=$_pkgname-git
pkgver=20130901
pkgrel=2
pkgdesc="A utility for ponifying and deponifying text"
arch=('any')
url="http://github.com/DanielOaks/$_pkgname/"
license=('MIT')
groups=()
depends=('perl')
makedepends=('git')
provides=("$_pkgname")
conflicts=("$_pkgname")
source=("$_pkgname::git+https://github.com/DanielOaks/$_pkgname.git")
md5sums=('SKIP')

#pkgver() {
#  cd "$srcdir/$_pkgname"
#  echo "0.$(git rev-list --count HEAD).$(git describe --always)"
#}

prepare() {
  cd "$srcdir/$_pkgname"
  pod2man README.pod > dashpipe.1 --release="dashpipe" --center="Pony Utilities" --name="DASHPIPE" --section=1
}

package() {
  install -Dm755 "$srcdir/$_pkgname/$_pkgname" "$pkgdir/usr/bin/$_pkgname"
  install -Dm644 "$srcdir/$_pkgname/dashpipe.1" "$pkgdir/usr/share/man/man1/$_pkgname.1"
}

