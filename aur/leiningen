# Maintainer: Tobias Frilling <tobias@frilling-online.de>
pkgname=leiningen
pkgver=2.3.1
pkgrel=2
epoch=1
pkgdesc="Leiningen is for automating Clojure projects without setting your hair on fire."
arch=('any')
url="http://github.com/technomancy/leiningen"
license=("EPL")
depends=('clojure' 'java-environment')
optdepends=('rlwrap')
source=('https://raw.github.com/technomancy/leiningen/stable/bin/lein'
        'https://raw.github.com/technomancy/leiningen/stable/doc/lein.1'
        'https://raw.github.com/technomancy/leiningen/stable/zsh_completion.zsh'
        'https://raw.github.com/technomancy/leiningen/stable/bash_completion.bash')
sha1sums=('6b3f73eeff2201b3810965ba2de4dd8a35e51d25'
          'd3825609a4e3400e92cd0d8dfafd4060bf32f45a'
          'dac5b315e6d5daeb95a93c6fa42250cea60590b5'
          '824028076c419324a7b32f5344fef4d546ac21b5')

package() {
  cd ${srcdir}
  install -m 755 -D lein ${pkgdir}/usr/bin/lein
  install -D "${srcdir}"/lein.1 "${pkgdir}"/usr/share/man/man1/lein.1
  install -D "${srcdir}"/zsh_completion.zsh "${pkgdir}"/usr/share/zsh/site-functions/_lein
  install -D "${srcdir}"/bash_completion.bash "${pkgdir}"/usr/share/bash-completion/completions/lein
}
