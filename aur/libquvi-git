# XXX: Build will fail if old headers are present on the system.
# XXX: You have to uninstall libquvi in order to build this.

pkgname=libquvi-git
pkgver=0.9.3
pkgrel=2
pkgdesc='Cross-platform library for parsing flash media stream URLs. (GIT version)'
arch=('i686' 'x86_64')
url="http://quvi.sourceforge.net/"
license=('LGPL')
depends=('libquvi-scripts-git' 'curl' 'libproxy' 'libgcrypt' 'glib2')
makedepends=('git' 'asciidoc')
provides=('libquvi')
conflicts=('libquvi')
options=('!libtool')
source=('git://repo.or.cz/libquvi.git#branch=next')
sha256sums=('SKIP')

pkgver() {
  cd 'libquvi'
  git describe | sed 's/^v//;s/-/+/g'
}

build() {
  cd 'libquvi'

  ./bootstrap.sh

  ./configure \
    --prefix=/usr

  make
}

package() {
  cd 'libquvi'

  make DESTDIR="$pkgdir" install
}

