# Mantainer: Diego <cdprincipe@at@gmail@dot@com>

pkgname=slingscold
pkgver=1.2.1
pkgrel=1
pkgdesc="Lighter launcher"
arch=('any')
url="http://sourceforge.net/projects/slingscold/"
license=('GPL3')
depends=('libunique' 'gtk2' 'libgee06' 'gnome-menus2' 'libwnck')
makedepends=('cmake' 'vala')

source=("http://kent.dl.sourceforge.net/project/slingscold/slingscold_"$pkgver".tar.gz"
        '0001-Add-missing-lm-dep.patch')
md5sums=('62bb429cf8c2189e429897c2e820871d'
         '67182b4b7d23792e46c698d518116bdc')

prepare() {
  cd "$srcdir"/slingscold_"$pkgver"
  patch -p1 < "$srcdir"/0001-Add-missing-lm-dep.patch
}

build() {
  cd "$srcdir"/slingscold_"$pkgver"
  cmake "$srcdir"/slingscold_"$pkgver"
  make
}

package() {
  cd "$srcdir"/slingscold_"$pkgver"
  make DESTDIR="$pkgdir" install
}
