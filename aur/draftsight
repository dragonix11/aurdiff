# Contributor: Dan Serban
# Contributor: Loui Chang <louipc dot ist at gmail company> (SPAMMERS!)

pkgname=draftsight
pkgver=V1R4.0
pkgrel=1
pkgdesc="Dassault Systemes' freeware CAD software for your DWG files."
url="http://www.3ds.com/products/draftsight/"
license=('Commercial')
depends=(
    'fontconfig'
    'gcc-libs'
    'glib2'
    'glibc'
    'glu'
    'libcups'
    'libgl'
    'libice'
    'libsm'
    'libx11'
    'libxext'
    'libxrender'
    'libxt'
    'mesa'
    'nas'
    'util-linux'
    'zlib'
    'alsa-lib'
)
optdepends=(
    'ati-dri'
    'intel-dri'
    'nouveau-dri'
    'nvidia-utils'
)

arch=('i686' 'x86_64')
install='draftsight.install'
source=("draftsight-$pkgver.rpm::http://dl-ak.solidworks.com/nonsecure/draftsight/$pkgver/draftSight.rpm")
md5sums=('defe6f2c04d4d6eaf32489ca7a5189bc')
_pkgprefix='opt/dassault-systemes/draftsight'

# Build and replace dependency list for x86_64
if [[ "$CARCH" == 'x86_64' ]]; then
    for i in ${depends[@]}
    do
        _depends_64+=("lib32-$i")
    done
    depends=("${_depends_64[@]}")
fi

if [[ "$CARCH" == 'x86_64' ]]; then
    for i in ${optdepends[@]}
    do
        _optdepends_64+=("lib32-$i")
    done
    optdepends=("${_optdepends_64[@]}")
fi

package() {
    # Perhaps it should be a copy instead, but this is fast on the
    # same filesystem.
    mv opt "${pkgdir}"/

    mkdir -p "${pkgdir}"/etc/profile.d
    echo "export PATH=\$PATH:/${_pkgprefix}/bin" > $pkgdir/etc/profile.d/$pkgname.sh
    chmod 755 "${pkgdir}"/etc/profile.d/$pkgname.sh

    # Some of these are incompatible with system libraries of the same soname,
    # which will cause problems with applications that depend on them.
    #mkdir -p "${pkgdir}"/etc/ld.so.conf.d
    #echo /${_pkgprefix}/lib > $pkgdir/etc/ld.so.conf.d/$pkgname.conf

    # ln -s"${pkgdir}"/${_pkgprefix}/Eula "${pkgdir}"/usr/share/licenses/draftsight
    install -D "${pkgdir}"/${_pkgprefix}/Eula/english/eula.htm "${pkgdir}"/usr/share/licenses/draftsight/eula.htm
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/128x128/dassault-systemes_draftsight.png "${pkgdir}"/usr/share/icons/hicolor/128x128/apps/dassault-systemes.draftsight.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/64x64/dassault-systemes_draftsight.png "${pkgdir}"/usr/share/icons/hicolor/64x64/apps/dassault-systemes.draftsight.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/48x48/dassault-systemes_draftsight.png "${pkgdir}"/usr/share/icons/hicolor/48x48/apps/dassault-systemes.draftsight.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/32x32/dassault-systemes_draftsight.png "${pkgdir}"/usr/share/icons/hicolor/32x32/apps/dassault-systemes.draftsight.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/16x16/dassault-systemes_draftsight.png "${pkgdir}"/usr/share/icons/hicolor/16x16/apps/dassault-systemes.draftsight.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/128x128/dassault-systemes_draftsight-dwg.png "${pkgdir}"/usr/share/icons/hicolor/128x128/mimetypes/dassault-systemes.draftsight-dwg.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/64x64/dassault-systemes_draftsight-dwg.png "${pkgdir}"/usr/share/icons/hicolor/64x64/mimetypes/dassault-systemes.draftsight-dwg.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/48x48/dassault-systemes_draftsight-dwg.png "${pkgdir}"/usr/share/icons/hicolor/48x48/mimetypes/dassault-systemes.draftsight-dwg.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/32x32/dassault-systemes_draftsight-dwg.png "${pkgdir}"/usr/share/icons/hicolor/32x32/mimetypes/dassault-systemes.draftsight-dwg.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/16x16/dassault-systemes_draftsight-dwg.png "${pkgdir}"/usr/share/icons/hicolor/16x16/mimetypes/dassault-systemes.draftsight-dwg.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/128x128/dassault-systemes_draftsight-dxf.png "${pkgdir}"/usr/share/icons/hicolor/128x128/mimetypes/dassault-systemes.draftsight-dxf.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/64x64/dassault-systemes_draftsight-dxf.png "${pkgdir}"/usr/share/icons/hicolor/64x64/mimetypes/dassault-systemes.draftsight-dxf.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/48x48/dassault-systemes_draftsight-dxf.png "${pkgdir}"/usr/share/icons/hicolor/48x48/mimetypes/dassault-systemes.draftsight-dxf.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/32x32/dassault-systemes_draftsight-dxf.png "${pkgdir}"/usr/share/icons/hicolor/32x32/mimetypes/dassault-systemes.draftsight-dxf.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/16x16/dassault-systemes_draftsight-dxf.png "${pkgdir}"/usr/share/icons/hicolor/16x16/mimetypes/dassault-systemes.draftsight-dxf.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/128x128/dassault-systemes_draftsight-dwt.png "${pkgdir}"/usr/share/icons/hicolor/128x128/mimetypes/dassault-systemes.draftsight-dwt.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/64x64/dassault-systemes_draftsight-dwt.png "${pkgdir}"/usr/share/icons/hicolor/64x64/mimetypes/dassault-systemes.draftsight-dwt.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/48x48/dassault-systemes_draftsight-dwt.png "${pkgdir}"/usr/share/icons/hicolor/48x48/mimetypes/dassault-systemes.draftsight-dwt.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/32x32/dassault-systemes_draftsight-dwt.png "${pkgdir}"/usr/share/icons/hicolor/32x32/mimetypes/dassault-systemes.draftsight-dwt.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/pixmaps/16x16/dassault-systemes_draftsight-dwt.png "${pkgdir}"/usr/share/icons/hicolor/16x16/mimetypes/dassault-systemes.draftsight-dwt.png
    install -D "${pkgdir}"/${_pkgprefix}/mime/dassault-systemes_draftsight-dwg.xml "${pkgdir}"/usr/share/mime/application/dassault-systemes_draftsight-dwg.xml
    install -D "${pkgdir}"/${_pkgprefix}/mime/dassault-systemes_draftsight-dxf.xml "${pkgdir}"/usr/share/mime/application/dassault-systemes_draftsight-dxf.xml
    install -D "${pkgdir}"/${_pkgprefix}/mime/dassault-systemes_draftsight-dwt.xml "${pkgdir}"/usr/share/mime/application/dassault-systemes_draftsight-dwt.xml
    install -D "${pkgdir}"/${_pkgprefix}/mime/dassault-systemes_draftsight.desktop "${pkgdir}"/usr/share/applications/dassault-systemes_draftsight.desktop
}

