# Maintainer: Maximilien Noal (noal dot maximilien at gmail dot com) [AUR: xcomcmdr]

pkgname=elzdraw-git
_gitname=touhy
_pkgprog=elzdraw
pkgver=51.7d9b04e
pkgrel=2
pkgdesc="Elzen's drawing program"
arch='any'
license='GPL3'
url='http://fadrienn.irlnc.org/touhy/'
groups='touhy'
depends=('touhy-git' 'pygtk')
makedepends='git'
md5sums=('SKIP'
  '3b3b6e733b1fb7a1bfc3336df1d50ca5'
  '9ca12ba8805eb32969abd9eec8f2d269')
source=('git://fadrienn.irlnc.org/touhy' 'use-env.patch' 'elzdraw.desktop')

pkgver() {
  cd ${srcdir}/${_gitname}
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd ${srcdir}/${_gitname}
  mkdir -p ${pkgdir}/usr/bin
  install ${_pkgprog} ${pkgdir}/usr/bin
  install -Dm 644 ${srcdir}/${_pkgprog}.desktop \
    ${pkgdir}/usr/share/applications/${_pkgprog}.desktop
  patch -i ${srcdir}/use-env.patch ${pkgdir}/usr/bin/${_pkgprog}
}
