# Maintainer: Albert.Zhou <albert.zhou@wiz.cn>
pkgname=wiznote
pkgver=2.0.20
pkgrel=1
pkgdesc="opensource cross-platform cloud based note-taking application"
arch=('i686' 'x86_64')
url="http://www.wiznote.com"
license=('GPL3' 'custom')
depends=('desktop-file-utils' 'hicolor-icon-theme' 'xdg-utils' 'qt5-base' 'qt5-webkit') # indirect: qt5-declarative qt5-sensors zlib glic gcc-libs
makedepends=('cmake>=2.8.9')
install=wiznote.install
source=("$pkgname::git+https://github.com/WizTeam/WizQTClient.git#tag=v2.0.20")
md5sums=('SKIP')

build() {
	cd "$srcdir/$pkgname"
    cmake -DCMAKE_INSTALL_PREFIX=/usr/ .
	make
}

package() {
	cd "$srcdir/$pkgname"
	make DESTDIR="$pkgdir/" install
}