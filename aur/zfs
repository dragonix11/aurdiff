# Contributor: Kyle Fuller <inbox at kylefuller dot co dot uk>

pkgname=("zfs")
pkgver=0.6.1_3.10.7
pkgrel=1
pkgdesc="Kernel modules for the Zettabyte File System."
depends=("spl=0.6.1_3.10.7-1" "zfs-utils=0.6.1_3.10.7-1" "linux=3.10.7-1")
makedepends=("linux-headers=3.10.7-1")
arch=("i686" "x86_64")
url="http://zfsonlinux.org/"
source=(http://archive.zfsonlinux.org/downloads/zfsonlinux/zfs/zfs-0.6.1.tar.gz
        zfs_git_head.patch)
groups=("archzfs")
md5sums=('822cd73c139d89369d6c3944f8afe659'
         'c99b1ce589cc409ffd18ef8db33da289')
license=("CDDL")
install=zfs.install

prepare() {
  cd "$srcdir/zfs-0.6.1"
  patch -Np1 -i ../zfs_git_head.patch
}

build() {
  cd "$srcdir/zfs-0.6.1"
  ./autogen.sh
  ./configure --prefix=/usr \
              --sysconfdir=/etc \
              --sbindir=/usr/bin \
              --libdir=/usr/lib \
              --datadir=/usr/share \
              --includedir=/usr/include \
              --with-udevdir=/lib/udev \
              --libexecdir=/usr/lib/zfs-0.6.1 \
              --with-config=kernel
  make
}

package() {
  cd "$srcdir/zfs-0.6.1"
  make DESTDIR="$pkgdir" install

  # move module tree /lib -> /usr/lib
  cp -r $pkgdir/{lib,usr}
  rm -r $pkgdir/lib
}
