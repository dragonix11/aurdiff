  patch -s -Np1 -i $srcdir/add-implementation-setProcessWorkingSetSize.patch

  msg "..    . SUCCESS :)"

  msg "Applying setidealcpu_wine.patch"
  patch -s -Np1 -i $srcdir/setidealcpu_wine.patch

  msg "  ..    SUCCESS :)"

