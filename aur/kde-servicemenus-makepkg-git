# Maintainer: udeved <udeved@openrc4arch.site40.net>

pkgname=kde-servicemenus-makepkg-git
pkgver=20131021
pkgrel=1
pkgdesc="Kde servicemenu for makepkg"
arch=('any')
url="https://github.com/udeved/kde-makepkg-servicemenu"
license=('GPL2')
depends=('kdebase-dolphin' 'namcap' 'pacman')
makedepends=('git')
conflicts=('kde-servicemenus-makepkg')

_gitroot=$url.git
_gitname=kde-makepkg-servicemenu

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
}

package() {
  cd "$srcdir/$_gitname"

  install -Dm755  ServiceMenus/makepkg.desktop $pkgdir/usr/share/kde4/services/ServiceMenus/makepkg.desktop

  install -Dm755  bin/pkg_mk $pkgdir/usr/bin/pkg_mk
  install -Dm755  bin/pkg_check $pkgdir/usr/bin/pkg_check
  install -Dm755  bin/pkg_add_checksum $pkgdir/usr/bin/pkg_add_checksum

  install -Dm755  mime/packages/text-PKGBUILD.xml $pkgdir/usr/share/mime/packages/text-PKGBUILD.xml
  install -Dm755 mime/text/PKGBUILD.xml $pkgdir/usr/share/mime/text/PKGBUILD.xml

}
