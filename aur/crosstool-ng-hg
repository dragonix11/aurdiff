# -*- shell-script -*-
# Maintainer: goodmen <goodmenzy@gmail.com>

pkgname=crosstool-ng-hg
pkgver=3243
_mercurial_ver=9838aecd6340
pkgrel=1
pkgdesc="crosstool-NG aims at building toolchains."
arch=('i686' 'x86_64')
url="http://crosstool-ng.org/"
license=('GPL')
depends=('bash>=3.0' 'make>=3.80' 'ncurses' 'gperf')
conflicts=('crosstool-ng')
source=(http://crosstool-ng.org/hg/crosstool-ng/archive/$_mercurial_ver.tar.bz2)
md5sums=('eb20f5e026a751cc97080f024a1eb382')

build () {
  cd "${srcdir}"/crosstool-ng-$_mercurial_ver

  ./bootstrap || return 1
  ./configure --prefix=/usr || return 2
  make || return 3
}

package () {
  cd "${srcdir}"/crosstool-ng-$_mercurial_ver
  
  make DESTDIR="$pkgdir" install || return 1
}
