# Maintainer: Joel Teichroeb <joel@teichroeb.net>

pkgname=orbital-git
pkgver=20130811
pkgrel=1
pkgdesc=""
arch=(i686 x86_64)
url="https://github.com/giucam/orbital"
license=('LGPL')
depends=('qt5-base' 'weston-git')
makedepends=('git' 'cmake')
options=(!libtool)
source=(git://github.com/giucam/orbital)
sha1sums=('SKIP')

build() {
	cd "orbital"

	cmake .
	make
}

package() {
	cd "orbital"

	install -Dm755 "orbital-client" "$pkgdir/usr/bin/orbital-client"
	install -Dm755 "orbital-shell.so" "$pkgdir/usr/lib/orbital-shell.so"
}
