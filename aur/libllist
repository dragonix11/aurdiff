#Maintainer theNerd247 <noah.harvey247@gmail.com>

pkgname=libllist
pkgver=0.0.2
pkgrel=5
pkgdesc="A C library for linked lists"
arch=('i686' 'x86_64')
url=https://www.github.com/theNerd247/libllist
license=('GPL')
source=("$url/raw/master/pkgs/$pkgname-$pkgver.tar.gz"
			  "$url/raw/master/patches/lldestroy.patch")
depends=('glibc')
md5sums=('f4b474f0a093d1235c8416347497b1d7'
				 'd4bddb2478ed56ebb748ea430be88187') 

prepare()
{
	cd "$srcdir"
	patch $pkgname-$pkgver/src/llist.c lldestroy.patch
}

build()
{
	cd "$srcdir/$pkgname-$pkgver"
	make
}

package()
{
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install
}
