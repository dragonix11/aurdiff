#Contributor: Chernmy <chernmy@gmail.com> 
#Maintainer: xgdgsc<xgdgsc@gmail.com>
pkgname=wiznote
pkgver=1.5.54
pkgrel=2
_release_date=2013-07-31
pkgdesc="Opensource Cross platform cloud note-taking application"
arch=('i686' 'x86_64')
url="https://github.com/WizTeam/WizQTClient"
license=('GPL3')
depends=('qtwebkit')
install=wiznote.install
#PKGEXT=".pkg.tar"

if [ "${CARCH}" = 'x86_64' ]; then
    ARCH='x64'
    md5sums=('908ead6f01d73c82c4f392e55fa832a7')
else 
    ARCH='x86'
    md5sums=('e25424609f1f0c571ebff85b5b5b1071' )
fi

#_source_name=${pkgname}_${pkgver}_${CARCH}.tar.gz
_src_name=wiznote-linux-$ARCH-$_release_date
source=("http://download.wiz.cn/download/wiznote/$_src_name.tar.gz" )



package() {

    cd "$srcdir/"
    msg "Copying files"
    rm "$srcdir/"*.gz
    sed -i 's/Exec=wiznote/Exec=QT_PLUGIN_PATH= \/opt\/wiznote\/bin\/wiznote/' "$srcdir/share/applications/wiznote.desktop"
    mkdir -p "$pkgdir/opt/wiznote"
    mkdir -p "$pkgdir/usr/share/applications"
    #rm -rf lib
    #rm -rf plugins
    cp -R "$srcdir/"* "$pkgdir/opt/wiznote"
    cp "$srcdir/share/applications/wiznote.desktop" "$pkgdir/usr/share/applications"
    for size in 16 24 32 48 64 128 256;do
        install -dm755 "$pkgdir"/usr/share/icons/hicolor/${size}x${size}/apps
        ln -s /opt/"$pkgname"/share/"$pkgname"/skins/${pkgname}${size}.png \
          "$pkgdir"/usr/share/icons/hicolor/${size}x${size}/apps/${pkgname}.png
    done

    msg2 "Done copying files"

}
