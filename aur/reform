pkgname=reform
pkgver=0.1.3.2
pkgrel=2
pkgdesc="a tool for updating old PKGBUILD files"
arch=('any')
url="https://bitbucket.org/hav3lock/pub_rel/src"
license=('GPL3')
depends=('perl' 'perl-text-diff')
source=("https://bitbucket.org/hav3lock/pub_rel/downloads/$pkgname-$pkgver.tar.gz")
md5sums=('2a9c524db3077385abc0e044419060b2')

package () {

    cd "$srcdir/$pkgname-$pkgver"

    make DESTDIR="\"$pkgdir\"" install

}
