pkgname=evolution-mapi
pkgver=3.10.0
_gnomever=3.10
pkgrel=1
pkgdesc="MAPI plugin for evolution."
arch=('i686' 'x86_64')
url="http://www.gnome.org"
license=('GPL3')
    depends=('evolution>=3.10.0-1' 'openchange>=2.0-2' 'intltool>=0.50.2-1')
source=(http://ftp.gnome.org/pub/gnome/sources/evolution-mapi/$_gnomever/${pkgname}-${pkgver}.tar.xz)
sha256sums=('974614fc2b0f0cc9d70019e5ca09574cea3b2a177bd1f5bbd4e3fb2ba164e15f')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}

    ./configure --prefix=/usr
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}

    make DESTDIR="$pkgdir/" install
}
