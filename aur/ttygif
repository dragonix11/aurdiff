# Maintainer: Shaw <puxx@mail.ustc.edu.cn>

pkgname=ttygif
pkgver=git~ea0b493e6a
pkgrel=1
pkgdesc="A tool that converts a ttyrec file into gif files."
arch=(i686 x86_64)
url="https://github.com/icholy/ttygif"
license=('unknown')
depends=('imagemagick' 'ttyrec-git')
makedepends=('git')

build() {
	rm -rf $srcdir/$pkgname
	git clone https://github.com/icholy/ttygif.git
	cd $srcdir/$pkgname
	make
}

package() {
	install -Dm755 $srcdir/$pkgname/$pkgname $pkgdir/usr/bin/$pkgname
	install -Dm755 $srcdir/$pkgname/concat.sh $pkgdir/usr/bin/concat
}

