pkgname=emendo
pkgver=0.9.5
pkgrel=1
pkgdesc="Text editor with syntax highlighting"
arch=('i686' 'x86_64')
url="http://alphaos.tuxfamily.org/"
license=('GPL')
makedepends=('vala')
depends=('gtksourceview3')
source=(https://bitbucket.org/simargl/emendo/get/$pkgname-$pkgver.tar.gz)
md5sums=('19f5a0003581d39bfb2f632711e9c3c0')
options=(!strip)

package() {
  cd "$srcdir/"*-$pkgname-*
  make DESTDIR="$pkgdir/" install
}