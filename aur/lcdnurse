# Maintainer:  danyf90 <daniele.formichelli@gmail.com>

pkgname=lcdnurse
pkgver=1.0.3
pkgrel=1
pkgdesc='Heal dead pixels on your LCD screen thanks to the blink method'
url='http://congelli.eu/prog_info_lcdnurse.html'
license=('GPL')
arch=('i686' 'x86_64')
source=("http://congelli.eu/download/lcdnurse/lcdnurse-1.0.3.tar.gz")
sha512sums=('0988398e344ee93b933c9cab7b222fc9b096825e4c703b70bf0bcc01fba4dd8ff3186108da61a383a78c9944de799a79f939be2a9893fb3f88beebbf3ad4d72e')


build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
	make
}

package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
