pkgname=python2-braintree
_pkgname=braintree
pkgver=2.23.1
pkgrel=1
pkgdesc="Braintree Python Library"
arch=('any')
url="https://www.braintreepayments.com/docs/python"
license=('MIT')
makedepends=("python2-distribute")
depends=('python2')
source=("https://github.com/braintree/braintree_python/archive/${pkgver}.tar.gz")

package() {
  cd "${srcdir}/${_pkgname}_python-$pkgver"
  python2 setup.py install --root "${pkgdir}"

  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

sha512sums=('820a4817d72481b4dc3fd29b749b1d45ffeebfeab3d5f451d964d30aa88c35a57fe0e60ddeca79679f6a0983e7c3b70cffb52b0cc245c3a20fd9477e7942f181')
