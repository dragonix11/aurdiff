# Maintainer DaLinuxCookie <cookie@openmailbox.org>

pkgname=slim-theme-minimal-arch
pkgver=1.1
pkgrel=2
pkgdesc='Minimalist Arch Linux theme for SLiM'
arch=('any')
license=('GPLv3')
depends=('slim')
optdepends=(
'ttf-ubuntu-font-family: for better looking font'
)
url="https://github.com/DaLinuxCookie/minimal-arch"
source=(https://github.com/DaLinuxCookie/minimal-arch/blob/v${pkgver}/minimal-arch-${pkgver}.tar.gz?raw=true)
md5sums=('40d3df3c9dda33a7d192eab28a5c338f')

build() {
	mkdir -p ${pkgdir}/usr/share/slim/themes/minimal-arch/
	cd ${srcdir}/
	cp background.jpg ${pkgdir}/usr/share/slim/themes/minimal-arch/
	cp panel.png ${pkgdir}/usr/share/slim/themes/minimal-arch/
	cp slim.theme ${pkgdir}/usr/share/slim/themes/minimal-arch/
	cp README ${pkgdir}/usr/share/slim/themes/minimal-arch/
}