#Maintainer: onny <onny@project-insanity.org>

pkgname=openecardapp
pkgver=1.0.2
pkgrel=1
pkgdesc="Open eCard-App (opencard) is an open source alternative of the AusweisApp"
arch=('i686' 'x86_64')
url="https://www.openecard.org"
license=("GPL3")
depends=('java-runtime')
source=("https://www.openecard.org/download/OpeneCardApp-${pkgver}.jar")
sha512sums=('64b44e036c2660ef70103f583aaed153ed41d964166c5b2b0711c0852f7ef81e8a1856bbacf6bed81d4a32e542b2b22d881b8992dd4f9c77dd483f08289a2932')
noextract=("OpeneCardApp-${pkgver}.jar")
package() {
  mkdir -p "${pkgdir}/usr/bin"
  install -D ${srcdir}/OpeneCardApp-$pkgver.jar "${pkgdir}/opt/${pkgname}/OpenCardApp.jar"
  echo -e "#!/bin/bash\njava -jar /opt/${pkgname}/OpeneCardApp.jar \$@" > $pkgdir/usr/bin/openecardapp
  chmod a+x "${pkgdir}/usr/bin/openecardapp"
}
