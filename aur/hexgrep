#Maintainer: Xyne <ac xunilhcra enyx, backwards>
pkgname=hexgrep
pkgver=2013.8.26.5
pkgrel=1
pkgdesc='versatile grep-like binary stream and file search tool'
arch=(i686 x86_64)
license=(GPL)
url="http://xyne.archlinux.ca/projects/hexgrep"
source=(
  http://xyne.archlinux.ca/projects/hexgrep/src/hexgrep-2013.8.26.5.tar.xz
  http://xyne.archlinux.ca/projects/hexgrep/src/hexgrep-2013.8.26.5.tar.xz.sig
)
sha512sums=(
  702b0d9ea0f10f2a74dfabd2bbd09bafef7e3eb1667db3584865cc613010f9152c73ad8d2a5e7bbdd68a0ae735624bcb6564ef794aa3b32abe4156a69df33141
  96a30660dc20fc62828ba5d541f14724c2179a2c920a547a297f9a8c2ac9123bc0e4e1cb38ae3338e5c9f90c1c4a90487619dc710a533c734d2437fa8db58087
)
md5sums=(
  dcd414f94fd7c575798d153379b4b8c4
  817b14ad4b73006c10467e870a77f1e1
)

build ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  make
}

package ()
{
  cd -- "$srcdir/$pkgname-$pkgver"
  make prefix=/usr DESTDIR="$pkgdir" install
  install -Dm644 "man/hexgrep.1.gz" "$pkgdir/usr/share/man/man1/hexgrep.1.gz"
}

