pkgname=trytond-project
_pkgname=trytond_project
pkgver=2.8.1
_pkgdir=2.8
pkgrel=1
pkgdesc="The project module of the Tryton application platform"
arch=('any')
url='http://www.tryton.org/'
license=('GPL3')
groups=('trytond-modules')
depends=('trytond>=2.8' 'trytond-company-work-time>=2.8' 'trytond-party>=2.8' 'trytond-timesheet>=2.8')
makedepends=('python2-distribute')
source=("http://downloads.tryton.org/$_pkgdir/$_pkgname-$pkgver.tar.gz")
md5sums=("5015020c79dc72acc38f2ab177f066f6")

build() {
  cd $srcdir/$_pkgname-$pkgver
  python2 setup.py install --root=$pkgdir
}