# Maintainer: moebiuseye <möëbïüs döt ëÿë ät gmäïl döt cöm>

pkgname="skf-git"
pkgver=714b886
pkgrel=1
arch=(any)
pkgdesc="Plugin-based static website generator inspired by Suckless Web Framework"
url="http://skf.jeannedhack.org/"
license=(GPLv3)
depends=("markdown")
makedepends=("make" "git")
provides=("skf")
conflicts=("skf")
source=("git://github.com/moebiuseye/skf.git")
md5sums=("SKIP")

_gitroot=skf

pkgver () {
    cd "$srcdir/$_gitroot"
    git describe --always | sed 's|-|.|g'
}

build() {
    cd "$srcdir/$_gitroot"
    echo " DSTDIR = $pkgdir "
}

package() {
    cd "$srcdir/$_gitroot"
    make PREFIX=/usr DESTDIR="$pkgdir" install
}
