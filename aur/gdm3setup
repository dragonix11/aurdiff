# Maintainer: NanoArch <nanoarch77@gmail.com>

pkgname=gdm3setup
pkgver=20130928
pkgrel=1
pkgdesc="A GUI to configure GDM3, autologin options and change Shell theme"
arch=(any)
license=('GPL')
url="http://github.com/Nano77/gdm3setup"
source=(https://raw.github.com/Nano77/various/master/src/$pkgname-$pkgver.tar.xz)
depends=('gdm' 'gnome-shell' 'python2-lxml' 'python2-dbus' 'gdm3setup-utils')
conflicts=('gdm3setup-native-theme' 'gdm3setup-vala' 'gdm3setup-vala-native-theme')
sha256sums=('04237160c513900ea38586b4740515d5c86f0e4fa7583be0c486fc1db8157f7d')

build() {
  cd ${srcdir}/$pkgname-$pkgver

  make -C gui

}

package() {
  cd ${srcdir}/$pkgname-$pkgver

  make -C gui DESTDIR=${pkgdir} install
}
