pkgname=qca-qt5
pkgver=2048.cadbbd4
pkgrel=1
pkgdesc="Qt Cryptographic Architecture"
arch=('i686' 'x86_64')
url="http://delta.affinix.com/qca/"
license=('LGPL')
depends=('libsasl' 'nss' 'qt5-base')
makedepends=('git' 'cmake')
provides=('qca')
conflicts=('qca')
source=("git://anongit.kde.org/qca.git")
md5sums=('SKIP')

pkgver() {
  cd qca
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  cd $srcdir/qca
  sed -i "s|/mkspecs/features|/lib/qt/mkspecs/features|" CMakeLists.txt
}

build() {
  cd $srcdir/qca
  cmake . \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=/usr/lib \
        -DQCA_INSTALL_PLUGINS_IN_QT_PREFIX=ON \
        -DQT_PLUGINS_DIR=/usr/lib/qt/plugins
  make
}

package() {
  cd ${srcdir}/qca
  make DESTDIR=${pkgdir} install
}
