# Maintainer: Zachary Huff <zach.huff.386@gmail.com>

pkgname=drivnal
pkgver=0.1.14
pkgrel=1
pkgdesc="Linux backup utility with web interface"
arch=("any")
license=("AGPL3")
url="https://github.com/${pkgname}/${pkgname}"
depends=(
    "python2"
    "python2-flask"
    "python2-cherrypy"
    "rsync"
)
makedepends=(
    "python2-distribute"
)
provides=("${pkgname}")
conflicts=("${pkgname}")
source=("${url}/archive/${pkgver}.tar.gz")
sha256sums=("513569eeefaf20392d7fb1ce5f03f8463ff10f088c0b7032f1d9def812b3f6f5")
backup=(
    "etc/${pkgname}.conf"
    "var/lib/${pkgname}/${pkgname}.db"
    "var/log/${pkgname}.log"
)

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python2 setup.py build
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python2 setup.py install --root="${pkgdir}" --prefix=/usr --no-upstart
}
