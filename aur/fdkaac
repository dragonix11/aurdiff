# AUR Package Author: PelPix <kylebloss@pelpix.info>

pkgname=fdkaac
pkgver=0.3.0
pkgrel=5
pkgdesc="Encoder frontend for libfdk-aac"
arch=('i686' 'x86_64')
url="https://github.com/nu774/fdkaac"
license=('custom')
depends=('libfdk-aac')
conflicts=('fdkaac-git' 'libfdk-aac-git')
makedepends=('git')
source=("git://github.com/nu774/fdkaac.git#tag=${pkgver}")
_gitname="fdkaac"
md5sums=('SKIP')

pkgver() {

  cd "${srcdir}/${_gitname}"
  
#  git log -1 --format="%cd" --date=short | sed 's|-||g'
}

build() {
  cd ${_gitname}
  autoreconf -if
  ./configure --prefix=/usr --disable-rpath
  
  make
}

package() {
  cd ${_gitname}

  make DESTDIR="$pkgdir" install
}
# vim:set ts=2 sw=2 et:
