pkgname=ffdiaporama-devel
pkgver=1.7.devel.20130902
pkgrel=1
pkgdesc="Movie creator from photos and video clips (development version)"
arch=('i686' 'x86_64')
url="http://ffdiaporama.tuxfamily.org"
license=('GPL2')
provides=('ffdiaporama')
depends=('qt5-svg' 'ffmpeg' 'exiv2' 'shared-mime-info')
install=${pkgname}.install
source=(https://launchpad.net/ffdiaporama/1.7-devel/1.7-devel.20130901/+download/ffdiaporama_1.7.devel.2013.0902.tar.gz)
md5sums=('29c4d78c03bbeec9673d6a843fdbb11f')

build() {
  qmake PREFIX=/usr ffDiaporama.pro
  make
}

package() {
  make install INSTALL_ROOT=${pkgdir}
}