pkgname=unknown-horizons
pkgver=2013.3
pkgrel=1
pkgdesc="2D realtime strategy simulation with an emphasis on economy and city building."
arch=('i686' 'x86_64')
url="http://www.unknown-horizons.org/"
license=('GPL' 'CCPL')
depends=('fife' 'python2' 'python2-imaging' 'python2-yaml')
conflicts=('unknown-horizons-svn' 'unknown-horizons-git' 'openanno')
source=("https://github.com/${pkgname}/${pkgname}/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.xz")
md5sums=('f374addbb2d15d97e6344ebd0e53b791')
sha256sums=('3a7865e5c1db829562bfc4e6345caecd53792c22e83c8589740a94543dcd41c8')

package() {
	cd "$srcdir/$pkgname"
	python2 setup.py --quiet install --root="$pkgdir" --optimize=1
}
