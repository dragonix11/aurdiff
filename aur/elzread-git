# Maintainer: Maximilien Noal (noal dot maximilien at gmail dot com) [AUR: xcomcmdr]

pkgname=elzread-git
_gitname=touhy
_pkgprog=elzread
pkgver=50.499d664
pkgrel=1
pkgdesc="Elzen's document viewer"
arch='any'
license='GPL3'
url='http://www.irlnc.org/touhy/'
groups='touhy'
depends=('pygtk')
optdepends=('pywebkitgtk: view HTML files'
  'python2-poppler: PDF support'
  'python2-beautifulsoup3: alternate text renderer')
makedepends='git'
md5sums=('SKIP'
  '3b3b6e733b1fb7a1bfc3336df1d50ca5')
source=('git://fadrienn.irlnc.org/touhy' 'use-env.patch')

pkgver() {
  cd ${srcdir}/${_gitname}
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd ${srcdir}/${_gitname}
  mkdir -p ${pkgdir}/usr/bin
  install ${_pkgprog} ${pkgdir}/usr/bin
  install -Dm 644 resources/appinfos/${_pkgprog}.desktop \
    ${pkgdir}/usr/share/applications/${_pkgprog}.desktop
  patch -i ${srcdir}/use-env.patch ${pkgdir}/usr/bin/${_pkgprog}
}
