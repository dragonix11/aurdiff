pkgname=simple-radio
pkgver=1.1
pkgrel=2
pkgdesc="Play radio streams with mplayer"
arch=('i686' 'x86_64')
url="http://alphaos.tuxfamily.org"
license=('GPLv3')
depends=('mplayer' 'libnotify')
makedepends=('vala')
source=($pkgname-$pkgver.tar.xz)
md5sums=('54e736a3f6dbf61c9fa2e1bf95080e3e')
options=(!strip)

build() {
  tar -xf $pkgname-$pkgver.tar.xz -C $srcdir
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" -B install
}
