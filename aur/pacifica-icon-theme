pkgname=pacifica-icon-theme
pkgver=0.1
pkgrel=1
pkgdesc="Pacifica icon theme by bokehlicia"
url="http://bokehlicia.deviantart.com/art/Pacifica-Icons-402508559"
source=("http://fc07.deviantart.net/fs71/f/2013/267/b/a/pacifica_by_bokehlicia-d6nn5lb.zip")
md5sums=('fc51dfa656a42482aa851e184a29f3e0')
license=('GPL')
arch=('any')
depends=('elementary-icon-theme2.7')

package() {
	mkdir -p ${pkgdir}/usr/share/icons
	cp -raf ${srcdir}/Pacifica* ${pkgdir}/usr/share/icons/
	chown -R root:root "${pkgdir}"/usr
}

