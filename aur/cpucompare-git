# Maintainer: Muflone <muflone@vbsimple.net>

pkgname=cpucompare-git
_gitname=cpucompare
pkgver=0.1
pkgrel=1
pkgdesc="A GTK+ application to make comparisons between CPU models."
url="https://github.com/muflone/cpucompare"
arch=('any')
license=('GPL2')
depends=('python2' 'gtk3')
makedepends=('git')
provides=('cpucompare')
conflicts=('cpucompare')
source=("git://github.com/muflone/${_gitname}.git")
md5sums=('SKIP')

pkgver() {
  cd "${_gitname}"
  git describe --always | sed 's|-|.|g'
}

build() {
  cd "${_gitname}"
  python2 setup.py build
}

package() {
  cd "${_gitname}"
  python2 setup.py install --root "${pkgdir}"
}

