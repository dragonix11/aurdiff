pkgname=purple-whatsapp
pkgver=0.2
pkgrel=1
pkgdesc="WhatsApp protocol implementation for libpurple (pidgin)"
arch=('i686' 'x86_64')
url="https://github.com/davidgfnet/whatsapp-purple"
license=('GPLv2')
depends=('libpurple')
optdepends=('pidgin')
provides=('purple-whatsapp')
source=('https://github.com/davidgfnet/whatsapp-purple/archive/v0.2.tar.gz')
sha512sums=('2f9690b562949353a1136e97f7b50eea326991fdf5021761650048b7202948ebec3b0d9218aebf72f679c5aebee49beb4d9652ec04635817a09115c8eafc9b9a')

build() {
  cd "$srcdir/whatsapp-purple"
  make
}

package() {
  cd "$srcdir/whatsapp-purple"
  make DESTDIR=$pkgdir install
}

