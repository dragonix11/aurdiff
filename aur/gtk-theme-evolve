# Maintainer: Lucain
pkgname=gtk-theme-evolve
pkgver=2013.10.25
pkgrel=1
pkgdesc="A simple and minimal light theme designed to be easy on the eyes. Supports Gnome Shell, Unity, Pantheon and Xfce."
url="http://satya164.deviantart.com/art/Evolve-GTK3-Theme-264780816"
license=('GPLv3')
arch=('any')
depends=('gtk-engine-murrine')
optdepends=('gnome-tweak-tool: A tool to customize advanced GNOME 3 options.')
source=('http://fc01.deviantart.net/fs70/f/2013/298/3/b/evolve___gtk3_theme_by_satya164-d4dn66o.zip')
md5sums=('1ed1a25fba4b411e06cde016f1a50988')

package() {
    cd "$srcdir/"
    mkdir -p "$pkgdir/usr/share/themes/Evolve"
    cp -r Evolve-master/*  "$pkgdir/usr/share/themes/Evolve/"
} 

