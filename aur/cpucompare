# Maintainer: Muflone <muflone@vbsimple.net>

pkgname=cpucompare
pkgver=0.5
pkgrel=2
pkgdesc="A GTK+ application to make comparisons between CPU models."
url="https://github.com/muflone/cpucompare"
arch=('any')
license=('GPL2')
depends=('python2' 'gtk3' 'gobject-introspection')
provides=('cpucompare')
source=("${pkgname}-${pkgver}.tar.gz"::"https://github.com/muflone/${pkgname}/archive/${pkgver}.tar.gz")
md5sums=('ac11b06e51b55155435d5ae5bb474878')
sha1sums=('33d7e09818a7298a5909b962647b445146c489bd')
sha256sums=('cc7fa335a36341c35faddf9eca57009caa3b144f4de8803625c3b8305f58ec84')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --root "${pkgdir}"
}

