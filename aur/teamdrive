pkgname=teamdrive
pkgver=3.1.2_510
pkgrel=2
pkgdesc="Keeps data synchronised between various computers automatically."
arch=('i686' 'x86_64')
url="http://www.teamdrive.com/"
license=('CUSTOM')
depends=('')
if [[ "$CARCH" == "x86_64" ]]; then
   depends=('lib32-qt4'
         'lib32-glib2'
         'lib32-libxext'
         'lib32-libxrender'
         'lib32-fontconfig'
         'lib32-libsm'
         'lib32-sqlite'
         )         
fi
source=("http://s3download.teamdrive.net.s3.amazonaws.com/3.1.510/TMDR/linux/Install-TeamDrive-3.1.2.510_TMDR.run"
      "teamdrive.desktop")
options=(!strip)
md5sums=('11f55bed84ce1fea19fc26cd8df28094'
         '8f2b28fb16574d3dc1ea3cf9081c2caf')

build() {
    cd ${srcdir}
    chmod +x Install-TeamDrive-3.1.2.510_TMDR.run
}

package() {
    ./Install-TeamDrive-3.1.2.510_TMDR.run --mode unattended --prefix ${pkgdir}/opt/${pkgname}
    install -Dm644 "${srcdir}/${pkgname}.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"
    rm "${pkgdir}/opt/${pkgname}/Uninstall TeamDrive 3.desktop"
    rm "${pkgdir}/opt/${pkgname}/uninstall"
}
