# Maintainer: Richard Wiedenh√∂ft <richard.wiedenhoeft@gmail.com>
pkgname=neutron-git
pkgver=125.69ece8e
pkgrel=1
pkgdesc="A web-development-library written in vala"
url="http://github.com/Richard-W/neutron"
arch=('x86_64' 'i686')
license=('GPLv3')
depends=('glib2' 'libgee')
makedepends=('cmake' 'vala')
source=("git://github.com/Richard-W/neutron")
md5sums=('SKIP')

pkgver() {
	cd neutron
	echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
	cd neutron
	./configure --prefix=/usr
	make
}

package() {
	cd neutron
	make DESTDIR="${pkgdir}" install
}
