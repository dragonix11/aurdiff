  msg "  ..    SUCCESS :)"

  msg "Applying 0003-server-named_pipe-no-op-Renames-to-make-actual-behav.patch"
  patch -s -Np1 -i $srcdir/0003-server-named_pipe-no-op-Renames-to-make-actual-behav.patch

