pkgname=pcr-script
pkgver=1.38.1
pkgrel=2
pkgdesc="Bash script to create local repository from pacman cache. (Pacman Cache Repository)"
arch=('any')
url="https://github.com/yadieet/pcr"
license=('GPLv2')
depends=('bash')
source=("create-pcr-$pkgver::https://raw.github.com/yadieet/pcr/faa1ac28dceebf2415beadb643c139b3cea2823f/create-pcr")
md5sums=('718d280cf96cf9ea7992f6326644676c')


package() {
  install -D -m755 "${srcdir}/create-pcr-$pkgver" "${pkgdir}/usr/bin/create-pcr"
}

