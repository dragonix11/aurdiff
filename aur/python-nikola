# Maintainer: Kwpolska <kwpolska@kwpolska.tk>
pkgname=python-nikola
_pyname=nikola
pkgver=6.0.3
pkgrel=1
pkgdesc='A static website and blog generator.'
arch=('any')
url='http://getnikola.com/'
license=('custom')
depends=('python' 'python-doit' 'python-pygments' 'python-pillow'
         'python-docutils' 'python-mako' 'python-unidecode' 'python-lxml'
         'python-yapsy' 'python-pyrss2gen' 'python-pytz')
options=(!emptydirs)
source=("https://github.com/getnikola/nikola/archive/nikola-${pkgver}.zip")
md5sums=('afcfa9a2adcfecbf4f972980e3e06a45')

package() {
  cd "${srcdir}/${_pyname}-${_pyname}-${pkgver}"
  python3 setup.py install --root="${pkgdir}/" --optimize=1
  install -D -m644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

