pkgname=vlc-vlsub
pkgver=0.9.10
_pkgver=2520c6b5cc51051cc15bb5b63db69c758d7f9044
pkgrel=1
pkgdesc='Search and download subtitles from opensubtitles.org using the hash of the video currently playing or its title'
arch=('any')
url='https://github.com/exebetche/vlsub'
license=('GPL')
depends=('vlc' 'lua')
options=(!emptydirs)
source=(https://raw.github.com/exebetche/vlsub/$_pkgver/vlsub.lua)
sha256sums=('c77d85adc5183abd1897dbcb6c38038887423d22f9363651aeb9bb43f89acd90')

package() {
  _DESTDIR="$pkgdir/usr/lib/vlc/lua/extensions/"
  install -dm755 "$_DESTDIR"
  install -m644 vlsub.lua "$_DESTDIR"
}

