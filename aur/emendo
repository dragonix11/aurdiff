pkgname=emendo
pkgver=2.0.8
pkgrel=1
pkgdesc="Text editor with syntax highlighting"
arch=('i686' 'x86_64')
url="https://bitbucket.org/simargl/emendo"
license=('GPL')
makedepends=('vala')
depends=('gtksourceview3')
source=(https://bitbucket.org/simargl/emendo/get/$pkgname-$pkgver.tar.gz)
md5sums=('SKIP')
options=(!strip)

package() {
  cd "$srcdir/"*-$pkgname-*
  make DESTDIR="$pkgdir/" install
}