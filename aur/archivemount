pkgname=archivemount
pkgver=0.8.1
pkgrel=2
pkgdesc="FUSE based filesystem for mounting compressed archives"
arch=('i686' 'x86_64')
url="http://www.cybernoia.de/software/archivemount/"
license="GPL"
depends=('fuse')
makedepends=('')
source=("http://www.cybernoia.de/software/${pkgname}/${pkgname}-${pkgver}.tar.gz")
sha512sums=('7930a90eeb444a7af810b3a97b8001a2b22387359db6091c3fa7db2afd1677dcc441b35e5bfe13a55f3d428d78ed62a983c9db13272d500c7c54aae506e7f288')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}

