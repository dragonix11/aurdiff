# Maintainer: M0Rf30
pkgname=tinycamd-svn
pkgver=46
pkgrel=1
pkgdesc="A small webcam daemon for Video4Linux2 devices"
arch=('i686' 'x86_64')
url="https://code.google.com/p/bzzwolfsp/"
license=('BSD')
depends=('libjpeg-turbo')
source=("svn+http://tinycamd.googlecode.com/svn/trunk/")

pkgver() {
  cd "$SRCDEST/trunk"
  svnversion | tr -d [A-z]
}

build() {
  cd "$srcdir/trunk"
  make CFLAGS="-Wall -O2 -MMD $(CFLAGS) $(COPTS)"

}

package() {
  cd "$srcdir/trunk"
  make DESTDIR=$pkgdir install
}

md5sums=('SKIP')
