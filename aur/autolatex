# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
pkgname=autolatex  
pkgver=24.1
pkgrel=1
pkgdesc="Automate generation of large scale LaTeX projects."
url="http://www.arakhne.org/autolatex/"
arch=('any')
license=('GPL')
depends=('perl' 'dconf')
backup=("etc/$pkgname/config" )
install=$pkgname.install
source=(http://mirror.ctan.org/support/$pkgname.zip)
md5sums=('f120833c56ca938ff6ef5e0c22656dc3')
options=('!emptydirs')

prepare() {
  cd $srcdir/$pkgname
  sed -i '12s+^+#+' Makefile.PL
}

build() {
  cd $srcdir/$pkgname
  perl Makefile.PL
  make
}

package() {
  cd $srcdir/$pkgname
  install -d $pkgdir/usr
  perl Makefile.PL --prefix=$pkgdir/usr install
  mv $pkgdir/usr/man $pkgdir/usr/share
}
