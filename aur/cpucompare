# Maintainer: Muflone <muflone@vbsimple.net>

pkgname=cpucompare
pkgver=0.4
pkgrel=1
pkgdesc="A GTK+ application to make comparisons between CPU models."
url="https://github.com/muflone/cpucompare"
arch=('any')
license=('GPL2')
depends=('python2' 'gtk3')
provides=('cpucompare')
source=("${pkgname}-${pkgver}.tar.gz"::"https://github.com/muflone/${pkgname}/archive/${pkgver}.tar.gz")
md5sums=('4745925bd23a712b1984b8e48cc3303d')
sha1sums=('9099c16f25eb9d1202a32a8222dc995001755b79')
sha256sums=('5b5077609835b37089223575b582fb635ee2b10a71cd2c365a3114b224c8fba1')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --root "${pkgdir}"
}

