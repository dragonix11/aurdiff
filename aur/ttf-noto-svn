# Maintainer: tailinchu <use_my_id at gmail dot com>

pkgname=ttf-noto-svn
pkgver=20130807
pkgrel=1
pkgdesc="Fonts support all languages/characters in Unicode"
arch=('any')
url="https://code.google.com/p/noto/"
license=('apache')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
makedepends=()
conflicts=(ttf-noto)
provides=('ttf-font')
source=("http://noto.googlecode.com/svn/trunk/packages/NotoFonts-hinted-2013-08-07.tgz")
install="$pkgname.install"
PKGEXT='.pkg.tar'
sha1sums=('5dd0be030a801a6e8c196fed3b2ce42cda215a1e')

package() {
    cd "$srcdir"
    install -dm755 "$pkgdir/usr/share/fonts/TTF"
    install -m644 $srcdir/fonts/individual/hinted/*.ttf "$pkgdir/usr/share/fonts/TTF"
}
