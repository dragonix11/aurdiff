# Maintainer: Josip Ponjavic <josipponjavic at gmail dot com>

pkgname=conky-manager-bzr
_pkgname=conky-manager
pkgver=58
pkgrel=1
pkgdesc="Simple tool for managing conky scripts."
arch=('i686' 'x86_64')
url=http://teejeetech.blogspot.in/
license=('GPL2')
depends=(desktop-file-utils gtk3 libgee06 p7zip)
optdepends=('conky: Lightweight system monitor for X')
makedepends=(bzr vala)
conflicts=(conky-manager)
options=(!emptydirs)
install=$pkgname.install
source=('conky-manager::bzr+lp:~teejee2008/conky-manager/trunk')
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgname"
  bzr revno
}

build() {
  cd "$srcdir/$_pkgname"

  make
}

package() {
  cd "$srcdir/$_pkgname"

  make DESTDIR="$pkgdir" install
}
