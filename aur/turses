# Maintainer: alejandrogomez <alejandroogomez@gmail.com>

pkgname=turses
pkgver=0.2.18
pkgrel=1
pkgdesc="A Twitter client for the console"
arch=('any')
url="http://pypi.python.org/pypi/turses/"
license=('GPLv3')
depends=('ncurses' 'python2' 'python2-oauth2' 'python2-tweepy' 'python2-urwid' 'python2-distribute')
source=(http://pypi.python.org/packages/source/t/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('ae60da1f00c1970454a51f08a5be4c85')

build() {
   cd "$srcdir/$pkgname-$pkgver"

   python2 setup.py install --root="$pkgdir/" --optimize=1
}
