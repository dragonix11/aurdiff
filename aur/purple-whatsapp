pkgname=purple-whatsapp
pkgver=0.2
pkgrel=2
pkgdesc="WhatsApp protocol implementation for libpurple (pidgin)"
arch=('i686' 'x86_64')
url="https://github.com/davidgfnet/whatsapp-purple"
license=('GPLv2')
depends=('libpurple')
optdepends=('pidgin')
provides=('purple-whatsapp')
source=('https://github.com/davidgfnet/whatsapp-purple/archive/v0.2.tar.gz'
        'https://github.com/davidgfnet/whatsapp-purple/commit/fef3111e7abd1abc0298cecf92f0545f1ae97af7.patch')
sha512sums=('2f9690b562949353a1136e97f7b50eea326991fdf5021761650048b7202948ebec3b0d9218aebf72f679c5aebee49beb4d9652ec04635817a09115c8eafc9b9a'
            'dcdb3d8c72f149e9e46995b4c725974d0b0c179c56a2856eaa39095087baffbe2381a855c056f7ebdcbe760d56dd7d0b9d31565e1b1627ae134c5c796f31cf26')

prepare() {
  cd "$srcdir/whatsapp-purple-${pkgver}"
  patch -i ../fef3111e7abd1abc0298cecf92f0545f1ae97af7.patch
}

build() {
  cd "$srcdir/whatsapp-purple-${pkgver}"
  make
}

package() {
  cd "$srcdir/whatsapp-purple-${pkgver}"
  make DESTDIR="${pkgdir}" install
}

