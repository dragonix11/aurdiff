# Maintainer: hbdee <hbdee.arch@gmail.com>

pkgname=kdeplasma-applets-smooth-tasks2
pkgver=20130824
pkgrel=1
pkgdesc="Taskbar plasmoid with window peeking similar to Windows 7"
arch=('i686' 'x86_64')
url=("http://kde-look.org/content/show.php/Smooth+Tasks+2?content=148813")
license=('GPL2')
depends=('kdebase-workspace>=4.9')
makedepends=('cmake' 'automoc4')
conflicts=('kdeplasma-applets-smooth-tasks-fork-hg' 'smooth-tasks-fork' 'smooth-tasks2')
install="smooth_tasks2.install"
source=("http://beonis.fr/smooth-tasks-v2013-08-24.tar.gz")
md5sums=('ca933c7e15a32692023daebfdd15cceb')


prepare() {
  if [[ -d build ]]
  then
    rm -rf build
  fi
   mkdir build
}

build() {
  cd build
  cmake ../smooth-tasks2 \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix`
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}