# Maintainer: X0rg

pkgname=dmg2dir-git
_gitname=dmg2dir
pkgver=v2.2.3.26b67e0
pkgrel=1
pkgdesc="A shell script which extract OS X application from .dmg file."
arch=('any')
url="https://github.com/X0rg/dmg2dir"
license=('unknow')
depends=('dmg2img' 'udisks2')
provides=('dmg2dir')
source=('git://github.com/X0rg/dmg2dir.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo $(git tag | awk 'END {print}').$(git describe --always | sed 's|-|.|g')
}

package() {
  cd $_gitname
  install -Dvm755 ./dmg2dir $pkgdir/usr/bin/dmg2dir
}
