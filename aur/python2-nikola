# Maintainer: Kwpolska <kwpolska@kwpolska.tk>
pkgname=python2-nikola
_pyname=nikola
pkgver=6.0.2
pkgrel=1
pkgdesc='A static website and blog generator.'
arch=('any')
url='http://getnikola.com/'
license=('custom')
depends=('python2' 'python2-doit' 'python2-pygments' 'python2-pillow'
         'python2-docutils' 'python2-mako' 'python2-unidecode'
         'python2-lxml' 'python2-yapsy' 'python2-pyrss2gen' 'python2-pytz')
options=(!emptydirs)
source=("https://github.com/getnikola/nikola/archive/nikola-${pkgver}.zip")
md5sums=('c34891593e8bf18693cd55210977244e')

package() {
  cd "${srcdir}/${_pyname}-${_pyname}-${pkgver}"
  python2 setup.py install --root="${pkgdir}/" --optimize=1
  install -D -m644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

