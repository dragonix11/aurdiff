pkgname=simple-radio
pkgver=2013.07
pkgrel=2
pkgdesc="Play radio streams with mplayer"
arch=('i686' 'x86_64')
url="http://alphaos.tuxfamily.org"
license=('GPLv3')
depends=('mplayer' 'libnotify')
makedepends=('vala')
source=(http://sourceforge.net/projects/alphaos/files/sources/$pkgname-$pkgver.tar.xz)
md5sums=('46e374b2d3521080d9c0f8475b8d1918')
options=(!strip)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" -B install
}
