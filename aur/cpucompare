# Maintainer: Muflone <muflone@vbsimple.net>

pkgname=cpucompare
pkgver=0.2
pkgrel=1
pkgdesc="A GTK+ application to make comparisons between CPU models."
url="https://github.com/muflone/cpucompare"
arch=('any')
license=('GPL2')
depends=('python2' 'gtk3')
provides=('cpucompare')
source=("${pkgname}-${pkgver}.tar.gz"::"https://github.com/muflone/${pkgname}/archive/${pkgver}.tar.gz")
md5sums=('022e8cc2d65423ee595375d603aab223')
sha1sums=('f9f1daa26a8a667685bfd93d8cef5dc03be6314c')
sha256sums=('5d9b510ed7e2b0f44c53af9262b5fb9545845b1d3468ac2aa1830e6d6911a403')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py build
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python2 setup.py install --root "${pkgdir}"
}

