pkgname=fuzelinuxclient
pkgver=1.0.9
pkgrel=1
pkgdesc='Fuze for Linux'
arch=('x86_64')
url='http://www.fuzebox.com/'
license=('unknown')
depends=('c-ares' 'libjpeg6' 'curl' 'qt4')
url_deb="https://apt.fuzebox.com/apt/pool/precise/main/f/fuzelinuxclient/fuzelinuxclient_1.0.9.precise_amd64.deb"
#source=($url_deb)
#md5sums=("e8f74469a98b290c81d9db3e4bf4dffa")
build() {
        msg "Flushing any previous sources."
        rm -Rf "$srcdir/tmp" 
        #rm -Rf "$srcdir/$pkgname-$pkgver"
        #mkdir -p "$srcdir/$pkgname-$pkgver"
        msg "No physical build required, using remote binary package as source."
        mkdir -p "$srcdir/tmp"
        cd "$srcdir/tmp"
        msg "Fetching RightScale RightLink debian binary package..."
        wget $url_deb --no-check-certificate
        ar x ./fuzelinuxclient_1.0.9.precise_amd64.deb
        
        msg "Extracting data.tar.gz..."
        tar zxf ./data.tar.gz
}

package() {
        msg "Moving package files into pkg/ directory..."
        mv "${srcdir}/tmp/usr" "${pkgdir}/"
}
