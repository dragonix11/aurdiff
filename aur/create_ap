pkgname=create_ap
pkgver=git~20130919
pkgrel=1
pkgdesc="A shell script to create a NATed Software Access Point"
arch=(any)
url="https://github.com/oblique/configs/blob/master/bin/create_ap"
license=('unknown')
depends=('hostapd' 'dnsmasq' 'iptables' 'iproute2')
optdepends=('haveged')
install=create_ap.install
source=(https://raw.github.com/oblique/configs/master/bin/create_ap)
md5sums=('SKIP')

package() {
	install -Dm755 $srcdir/create_ap $pkgdir/usr/bin/create_ap
}

