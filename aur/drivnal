# Maintainer: Zachary Huff <zach.huff.386@gmail.com>

pkgname=drivnal
pkgver=0.1.15
pkgrel=1
pkgdesc="Linux backup utility with web interface"
arch=("any")
license=("AGPL3")
url="https://github.com/${pkgname}/${pkgname}"
depends=(
    "python2"
    "python2-flask"
    "python2-cherrypy"
    "rsync"
)
makedepends=(
    "python2-distribute"
)
provides=("${pkgname}")
conflicts=("${pkgname}")
source=("${url}/archive/${pkgver}.tar.gz")
sha256sums=("2d0dc15acf87b9b34e56bb8a45c83727155491799e5c1ae0a4d3eb910ff8a642")
backup=(
    "etc/${pkgname}.conf"
    "var/lib/${pkgname}/${pkgname}.db"
    "var/log/${pkgname}.log"
)

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python2 setup.py build
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python2 setup.py install --root="${pkgdir}" --prefix=/usr --no-upstart
}
