# Maintainer : Usagi Ito <usagi@WonderRabbitProject.net>
# Contributor: siasia <http://pastebin.com/qsBEmNCw>
pkgname=dart-sdk
pkgver=0.8.5.1
pkgrel=1
pkgdesc="the Dart language SDK. (integration version as tested)"
arch=('i686' 'x86_64')
url="http://www.dartlang.org/docs/sdk/"
license=('BSD')
depends=('unzip' 'wget')
optdepends=('java-runtime: for dart-analyzer')
makedepends=()
provides=()
conflicts=()
replaces=()
install=dart-sdk.install
changelog=dart-sdk.changelog
noextract=()

if test "$CARCH" == x86_64; then
	source=("https://storage.googleapis.com/dart-editor-archive-integration/28990/dartsdk-linux-64.tar.gz")
	md5sums=('393fbf4cfe5d54a3e6f021fba12c48da')
else
	source=("https://storage.googleapis.com/dart-editor-archive-integration/28990/dartsdk-linux-32.tar.gz")
	md5sums=('9d6bda4335209ad0c69ef59aa8630221')
fi

source+=(dart2js dartdoc pub dartanalyzer)
md5sums+=('a1a1a287f933fa3282395f690c80af45' '07c9333c61a17fdd56da1b2dd31cb48e' '2158485e6375824e058fab5996e3e82a' '8b8cee29c3166ad463e893429f41218b')

package(){
	mkdir -p ${pkgdir}/opt
	find ${srcdir}/dart-sdk -perm -u+x -exec chmod +x '{}' +
	find ${srcdir}/dart-sdk -perm -u+r -exec chmod +r '{}' +
	cp -r ${srcdir}/dart-sdk ${pkgdir}/opt/

	mkdir -p ${pkgdir}/usr/bin
	# copy dart binary
	chmod +x ${srcdir}/dart-sdk/bin/dart
	cp ${srcdir}/dart-sdk/bin/dart ${pkgdir}/usr/bin/

	# copy custom startup scripts
	for f in ${source[@]:1:4}; do
		chmod +x ${srcdir}/$f
		cp ${srcdir}/$f ${pkgdir}/usr/bin/
	done
}
