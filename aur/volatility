pkgname=volatility
pkgver=2.2
pkgrel=3
pkgdesc="Volatile memory forensics toolkit"
arch=(any)
url=https://www.volatilesystems.com/default/volatility
license=(GPL2)
depends=(python2-crypto)
makedepends=(python2-setuptools)
source=(http://$pkgname.googlecode.com/files/$pkgname-$pkgver.tar.gz)
sha256sums=('19bff19cbc909a63dfa6fcc1c6756f07b7c9575262ad6271571f5e9b266062ad')
sha512sums=('14ea3f317dfc42ac446ac3a8cb33888e39701e0757776eb58da41c71ce2541ff09796c45ed20ce28bd58106cd2a7fa8adcb48a28025c99b9d6763d736aa0c69b')

build() {
    cd $pkgname-$pkgver/
    python2 setup.py build
}

package() {
    cd $pkgname-$pkgver/
    python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
}
