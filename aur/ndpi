# Mantainer: M0Rf30

pkgname=ndpi
pkgver=1.4.0
pkgrel=1
pkgdesc="Open and Extensible GPLv3 Deep Packet Inspection Library"
arch=('i686' 'x86_64')
url="http://www.ntop.org/products/ndpi/"
license=('GPL3')
conflicts=('ndpi-svn')

source=(nDPI-${pkgver}.tar.gz
	nDPI-1.4.0-patch-001)


build() {
  cd "${srcdir}/nDPI-${pkgver}"
  patch -Np1 -i ../nDPI-1.4.0-patch-001
  aclocal
  autoconf
  automake
  ./configure --with-pic --prefix=/usr
  make
}

package() {
  cd "${srcdir}/nDPI-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}

md5sums=('9e1d6f23c7ff7a79ed372c311d9ce001'
         'ebac6ad6825eaef5d07dd40ec9f953dc')
