# Maintainer: spider-mario <spidermario@free.fr>
# Contributor: Marcin Karpezo <sirmacik at gmail dot com>
# Contributor: Daenyth <Daenyth+Arch [at] gmail [dot] com>
pkgname=rakudo
pkgver=2013.09
pkgrel=1
pkgdesc="Perl6 compiler for the Parrot virtual machine"
arch=('i686' 'x86_64')
url='http://rakudo.org/'
license=(PerlArtistic)
depends=('nqp>=2013.09')
makedepends=('perl>=5.8')
options=('!makeflags')
source=(http://rakudo.org/downloads/star/rakudo-star-$pkgver.tar.gz)
sha512sums=('263341f139fcc7bcc34584c10d8876bdd9661b3a5a9261de2f54fc1c97d10107d52f37a62c32adfa0a1e8dcdc05902048678b124bed28c71cb10542204f88a0e')

build() {
  cd "$pkgname-star-$pkgver"
  perl Configure.pl --prefix=/usr \
                    --with-nqp=/usr/bin/nqp
  make
}

package() {
  cd "$pkgname-star-$pkgver"

  make DESTDIR="$pkgdir" install

  # remove references to $pkgdir
  find "$pkgdir" -iname '*.pir' -exec env strip="$pkgdir" perl -pe 's/\Q$ENV{strip}//g' -i {} +
}
